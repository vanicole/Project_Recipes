- @recipes.each do |recipe|
  .card.mb-3{:style => "display: inline-block; width: 250px;"}
    %h3.card-header
      %a{:href => recipe_path(recipe), :class => "card-link"} #{recipe.title}
    .card-body
      .card-title
      %img.img-thumbnail{:style => "height: 200px; width: 100%; display: block;", :src => "#{recipe.image.url}", :alt => "Recipe image"}

    %ul.list-group.list-group-flush
      %li.list-group-item.d-flex.justify-content-between.align-items-center
        Rating
        %span.badge.badge-primary.badge-pill
          #{recipe.averageScore}
      %li.list-group-item.d-flex.justify-content-between.align-items-center
     
%br
= link_to 'Back to recipe list', recipes_path